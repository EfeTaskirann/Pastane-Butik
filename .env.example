# ===========================================
# PASTANE - Environment Configuration
# ===========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# .env dosyası GIT'e eklenmemelidir!

# Application
APP_NAME="Tatlı Düşler"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/pastane
APP_TIMEZONE=Europe/Istanbul
APP_LOCALE=tr

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=pastane_db
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Security
APP_KEY=base64:GENERATE_A_32_CHAR_RANDOM_KEY_HERE
JWT_SECRET=GENERATE_A_SECURE_JWT_SECRET_HERE
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=3600
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Admin
ADMIN_EMAIL=admin@example.com

# Upload Settings
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# WhatsApp Integration
WHATSAPP_NUMBER=905551234567

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=storage/logs

# Cache
CACHE_DRIVER=file
CACHE_PATH=storage/cache

# Mail (Future)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"
